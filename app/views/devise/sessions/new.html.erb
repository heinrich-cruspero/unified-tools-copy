<%= form_for(resource, :html => {class: "form-signin"}, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">BBA Unified Tools</h1>

  <% if false %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <label >
          <%= f.check_box :remember_me %> Remember Me
        </label>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <div>
    <br>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


