<div class="nested-fields mt-1 mb-1">
    <div class="field">
        <%= f.collection_select :route_id, Route.order(
            :controller_name).all,:id, :to_s, { include_blank: 'Select a route' }, {class: "route-select-field", required: true} %>
        
        <%= f.hidden_field :_destroy %>
        <a href="#" class="remove_fields">
            <span class="fa fa-trash ml-1"></span>
        </a>
    </div>
</div>