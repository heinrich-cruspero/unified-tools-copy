<div class="row">
    <div class="col-sm">
        <div class="float-right">
            <%= link_to edit_feature_path(@feature), class: 'btn btn-secondary ml-2' do %>
              <span class="fa fa-file"></span>
              Edit
            <% end %>
            <%= link_to new_feature_path, class: 'btn btn-secondary ml-2' do %>
                <span class="fa fa-plus"></span>
                New
            <% end %>
            <%= link_to @feature, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' do %>
              <span class="fa fa-trash"></span>
              Delete
            <% end %>
            <%= link_to features_path, class:"btn btn-secondary ml-2" do %>
                <span class="fa fa-list"> </span>
                Return to List
            <% end %>
        </div>
    </div>
</div>

<table class="table table-bordered mt-3">
  <thead class="thead-light">
    <tr>
      <th colspan="3">Feature</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>ID</td>
        <td><%= @feature.id %></td>
      </tr>
      <tr>
        <td>Name</td>
        <td>
          <%= @feature.to_s %>
        </td>
      </tr>
      <tr>
        <td>Description</td>
        <td>
          <%= @feature.description %>
        </td>
      </tr>
      <tr>
        <td>Routes</td>
        <td>
          <ul class="ul-permission">
            <% @feature.routes.each do |route| %>
                <li>  
                  <i class="fa fa-chevron-right"></i>&nbsp;<%= route.to_s %>
                </li>
            <% end %>
          </ul>
        </td>
      </tr>
      <tr>
        <td>Created At</td>
        <td><%= @feature.created_at %></td>
      </tr>
      <tr>
        <td>Updated At</td>
        <td><%= @feature.updated_at %></td>
      </tr>
  </tbody>
</table>