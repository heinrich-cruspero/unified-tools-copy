<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="<%= features_path %>">Features</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="<%= routes_path %>">Routes</a>
  </li>
</ul>
<div class="row mt-3 mb-3">
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <%= link_to new_feature_path, class: 'btn btn-secondary ml-2' do %>
          <span class="fa fa-plus"></span>
          New
        <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th style="width: 10%">Name</th>
      <th style="width: 20%">Description</th>
      <th style="width: 20%">Routes</th>
      <th style="width: 15%">Created At</th>
      <th style="width: 15%">Updated At</th>
      <th style="width: 20%">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.description %></td>
        <td>
          <ul class="list-group">
            <% feature.routes.each do |route| %>
              <li class="list-group-item"><%= route.controller_action %></li>
            <% end %>
          </ul>
        </td>
        <td><%= feature.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= feature.updated_at.strftime("%B %d, %Y %H:%M") %></td>
        <td>
          <%= link_to edit_feature_path(feature), class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-file"></span>
            Edit
          <% end %>
          <%= link_to feature, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-trash"></span>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>