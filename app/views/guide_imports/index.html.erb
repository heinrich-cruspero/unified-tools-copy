<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Listing Guide Imports</h1>
    </div>
  </div>
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
        <div class="btn-group mr-2">
            <%= link_to new_guide_import_path, class: 'btn btn-primary', type: 'button' do %>
                <span class="fa fa-plus"></span>
                New Guide Import
            <% end %>
        </div>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
        <th style="width: 10%">File</th>
        <th style="width: 10%">Provider</th>
        <th style="width: 20%">Upload Date</th>
        <th style="width: 20%">Effective Date</th>
        <th style="width: 20%">Expiration Date</th>
        <th style="width: 20%">Imported?</th>
    </tr>
  </thead>

  <tbody>
    <% @guide_imports.each do |guide_import| %>
        <tr>
        <td><%= guide_import["file_name"] %></td>
        <td><%= guide_import["name"] %></td>
        <td><%= guide_import["created_at"] %></td>
        <td><%= guide_import["effective_date"] %></td>
        <td><%= guide_import["expiration_date"] %></td>
        <td><%= guide_import["imported"].capitalize %></td>
        </tr>
    <% end %>
  </tbody>
</table>
