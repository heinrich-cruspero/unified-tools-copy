<%= simple_form_for(@book_export_template, html: { id: :export_template_form }) do |form| %>
  <div class="row">
    <div class="col-sm">
      <% if !@template.nil? %>
        <% @template.errors.full_messages.each do |message| %>
          <div id="error_explanation" class="alert alert-warning alert-dismissable fade show" role="alert">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      <% end %>
      <% if book_export_template.errors.any? %>
        <% book_export_template.errors.full_messages.each do |message| %>
          <div id="error_explanation" class="alert alert-warning alert-dismissable fade show" role="alert">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <label for="book_export_template_name" class="col-sm-1 col-form-label">Name *</label>
    <div class="col-sm-3">
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Fields *</label>
    <div class="col-sm-11">
      <div id="field-mappings">
        <%= form.simple_fields_for :book_field_mappings do |field_mapping| %>
          <%= render 'book_field_mappings', f: field_mapping %>
        <% end %>
        <%= link_to_add_fields "Add Field", form, :book_field_mappings %>
        
      </div>
    </div>
    
  </div>
  <div class="form-group row border-top pt-3">
    <div class="col-sm-2">
      <div class="actions">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
