<%= form_for(@book_export_template, html: { id: :export_template_form }) do |form| %>

  <div class="form-group row">
    <label for="book_export_template_name" class="col-sm-1 col-form-label">Name *</label>
    <div class="col-sm-3">
      
      <%= form.hidden_field :user_id, value: "#{current_user.id}" %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Fields *</label>
    <div class="col-sm-4">
      <div id="field-mappings">
        <%= form.fields_for :book_export_template_field_mappings do |field_mapping| %>
          <%= render 'book_export_template_field_mappings', f: field_mapping %>
        <% end %>

      </div>
      <div id="hidden"></div>
      <div id="removed"></div>
      <div>
        <%= link_to_add_fields "Add Field", form, :book_export_template_field_mappings %>
      </div>
    </div>
    
  </div>
  <div class="form-group row border-top pt-3">
    <div class="col-sm-2">
      <div class="actions">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
