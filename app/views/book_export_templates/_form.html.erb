<%= simple_form_for(@book_export_template) do |form| %>
  <div class="row">
    <div class="col-sm">
      <% if book_export_template.errors.any? %>
        <div id="error_explanation" class="alert alert-warning alert-dismissable fade show" role="alert">
          <% book_export_template.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <label for="book_export_template_name" class="col-sm-1 col-form-label">Name *</label>
    <div class="col-sm-3">
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Fields *</label>
    <div class="col-sm-4">
      <div id="field-mappings">
        <%= form.simple_fields_for :book_field_mappings do |field_mapping| %>
          <%= render 'book_field_mappings', f: field_mapping %>
        <% end %>
      </div>
      <div id="link_add" class="links mt-2 not-sortable">
        <%= link_to_add_association form, :book_field_mappings, partial: 'book_field_mappings', class: 'btn btn-secondary btn-sm not-sortable' do %>
          <i class="fa fa-plus-circle not-sortable"></i>&nbsp;Add Field
        <% end %>
      </div>
    </div>
    
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <div class="actions">
        <%= form.submit "Save" %>
      </div>
    </div>
  </div>
<% end %>
