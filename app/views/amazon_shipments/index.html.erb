<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Amazon Shipment</h1>
    </div>
  </div>
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <a class="btn btn btn-secondary" href="<%= import_amazon_shipments_path %>" role="button"><i class="fa fa-plus"></i>&nbsp;Import</a>
      </div>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <a class="btn btn btn-danger" href="<%= delete_skus_amazon_shipments_path %>" role="button"><i class="fa fa-plus"></i>&nbsp;Delete</a>
      </div>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <%= form_tag('/amazon_shipments/index.csv', multipart: true, id: 'export-amazon-shipments-form') do %>
        <input type="hidden" value="" id="export-amazon-shipments-params" name="export-params">
        <%= submit_tag "Export CSV", class: 'btn btn-secondary csv-btn', id: 'export-amazon-shipments-submit-button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <div class="input-group mb-3 float-left">
      <a role="button" class="btn btn-secondary amazon-shipment-filter-button" href="<%= amazon_shipments_path %>">Standard</a>
      <a role="button" class="btn btn-secondary amazon-shipment-filter-button" href="<%= amazon_shipments_path(nil, filter: 'pending') %>">Pending</a>
      <a role="button" class="btn btn-secondary amazon-shipment-filter-button" href="<%= amazon_shipments_path(nil, filter: 'twenty_days_pending') %>">20 Days Pending</a>
      <a role="button" class="btn btn-secondary amazon-shipment-filter-button" href="<%= combine_amazon_shipments_path %>">Combine Shipments</a>
      <a role="button" class="btn btn-secondary amazon-shipment-filter-button" href="<%= indaba_skus_amazon_shipments_path %>">Indaba SKU Level</a>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-sm">
    <table class="table" id="amazon-shipments-datatable" data-source="<%= amazon_shipments_path(format: :json, filter: @filter_option) %>" style="text-align: center;">
      <thead>
        <tr>
          <th>ISBN</th>
          <th>Shipment ID</th>
          <th>Amazon SKU</th>
          <th>Quantity Shipped</th>
          <th>Quantity In Case</th>
          <th>Quantity Received</th>
          <th>Quantity Difference</th>
          <th>Condition</th>
          <th>Fulfillment Network SKU</th>

          <th>Author</th>
          <th>Title</th>
          <th>Edition</th>
          <th>Publisher</th>
          <th>Publication Date</th>
          <th>Weight</th>

          <th>Edition Status Code</th>
          <th>Edition Status Date</th>
          <th>List Price</th>
          <th>Used Wholesale Price</th>
          <th>nebraska wh</th>
          <th>qa aug low</th>
          <th>lowest good price</th>
          <th>qa low</th>
          <th>yearly low</th>
          <th>qa fba low</th>
          <th>monthly sqf</th>
          <th>monthly spf</th>
          <th>monthly rqf</th>
          <th>monthly rpf</th>
          <th>one year highest wholesale price</th>
          <th>two years wh max</th>

          <th>Created At</th>
          <th>Updated At</th>
          <th>Reconciled</th>
        </tr>
      </thead>
      <tbody class="text-nowrap">
      </tbody>
    </table>
  </div>
</div>
