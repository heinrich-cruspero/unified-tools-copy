<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Amazon Orders</h1>
    </div>
  </div>
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <a class="btn btn btn-secondary" href="<%= export_amazon_orders_path %>" role="button"><i class="fa fa-plus"></i>&nbsp;Export</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <table id="amazon-orders-datatable" data-source="<%= amazon_orders_path(format: :json) %>">
      <thead>
        <tr>
          <th>Amazon Order ID</th>
          <th>Status</th>
          <th>State</th>
          <th>City</th>
          <th>Zipcode</th>
          <th>Order Total</th>
          <th>Purchase Date</th>
          <th>Command</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>
