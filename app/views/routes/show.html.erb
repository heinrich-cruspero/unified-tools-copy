<div class="row">
    <div class="col-sm">
        <div class="float-right">
            <%= link_to routes_path, class:"btn btn-secondary ml-2" do %>
                <span class="fa fa-list"> </span>
                Return to List
            <% end %>
        </div>
    </div>
</div>

<table class="table table-bordered mt-3">
  <thead class="thead-light">
    <tr>
      <th colspan="3">Route</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>ID</td>
        <td><%= @route.id %></td>
      </tr>
      <tr>
        <td>Feature</td>
        <td><%= @route.feature %></td>
      </tr>
      <tr>
        <td>Controller</td>
        <td>
          <%= @route.controller_name %>
        </td>
      </tr>
      <tr>
        <td>Action</td>
        <td>   
            <%= @route.action_name %>
        </td>
      </tr>
      <tr>
        <td>Created At</td>
        <td><%= @route.created_at %></td>
      </tr>
      <tr>
        <td>Updated At</td>
        <td><%= @route.updated_at %></td>
      </tr>
  </tbody>
</table>