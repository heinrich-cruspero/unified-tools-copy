<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="<%= features_path %>">Features</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="<%= routes_path %>">Routes</a>
  </li>
</ul>
<div class="row mt-3 mb-3">
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <%= link_to new_route_path, class: 'btn btn-secondary ml-2' do %>
          <span class="fa fa-plus"></span>
          New
        <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th style="width: 10%">Feature</th>
      <th style="width: 15%">Controller</th>
      <th style="width: 15%">Action</th>
      <th style="width: 20%">Created At</th>
      <th style="width: 20%">Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td>
            <% unless route.feature.nil? %>
                <%= route.feature.name %>
            <% end %>
        </td>
        <td><%= route.controller_name %></td>
        <td><%= route.action_name %></td>
        <td><%= route.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= route.updated_at.strftime("%B %d, %Y %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
