<%= form_with(model: permission, local: true, id: :permission_form) do |form| %>
  <% if permission.errors.any? %>
    
      <% permission.errors.full_messages.each do |message| %>
        <div id="error_explanation" class="alert alert-warning alert-dismissable fade show" role="alert">
          <%= message.html_safe %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    
  <% end %>

  <div class="form-group row">
    <label for="permission_name" class="col-sm-1 col-form-label">
      Name *
    </label>
    <div class="col-sm-3">
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Authorizable</label>
    <div class="col-sm-3">
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="authorizable_options" id="user-radio-option" value="user">
        <label class="form-check-label" for="user-radio-option">User</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="authorizable_options" id="role-radio-option" value="role">
        <label class="form-check-label" for="role-radio-option">Role</label>
      </div>
      <small class="form-text text-muted">
        Select the type you want to authorize.
      </small>
      <div id="authorizable-user">
        <%= form.hidden_field :authorizable_user_type, value: "User" %>
        <%= form.collection_select :authorizable_user_id, User.all, :id, :email, { include_blank: "Select User"}, {class: "authorizable-select user form-control"} %>
      </div>
      <div id="authorizable-role">
        <%= form.hidden_field :authorizable_role_type, value: "Role" %>
        <%= form.collection_select :authorizable_role_id, Role.all.where.not(name: "Admin"), :id, :name, { include_blank: "Select Role"}, {class: "authorizable-select role form-control"} %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label">Book Export Fields</label>
    <div class="col-sm-11">
      <div id="permission-field-mappings">
        <%= form.fields_for :book_field_mapping_permissions do |field_mapping| %>
          <%= render 'book_field_mapping_permissions', f: field_mapping %>
        <% end %>

      </div>
      <div id="hidden"></div>
      <div id="removed"></div>
      <div>
        <%= link_to_add_fields "Add Field", form, :book_field_mapping_permissions %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <div class="actions">
        <%= form.submit "Save" %>
      </div>
    </div>
  </div>
<% end %>
