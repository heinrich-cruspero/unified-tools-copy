<div class="modal fade" id="permissionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content modal-permission-content">
      <div class="modal-header">
        <h5 class="modal-title" id="permissionModalLabel">New Permission</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">  
        <%= render '/permissions/form_modal', permission: @permission %>
      </div>
    </div>
  </div>
</div>