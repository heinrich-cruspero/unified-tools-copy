<div class="row">
    <div class="col-sm">
        <div class="float-right">
            <%= link_to edit_permission_path(@permission), class: 'btn btn-secondary ml-2' do %>
              <span class="fa fa-file"></span>
              Edit
            <% end %>
            <%= link_to new_permission_path, class: 'btn btn-secondary ml-2' do %>
                <span class="fa fa-plus"></span>
                New
            <% end %>
            <%= link_to @permission, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' do %>
              <span class="fa fa-trash"></span>
              Delete
            <% end %>
        </div>
    </div>
</div>

<table class="table table-bordered mt-3">
  <thead class="thead-light">
    <tr>
      <th colspan="3">Permission</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>ID</td>
        <td><%= @permission.id %></td>
      </tr>
      <tr>
        <td>Authorizable</td>
        <td>
          <%= link_to @permission.authorizable do %>
            <span class="fa fa-search-plus"></span>
          <% end %>
          <%= @permission.authorizable.to_s %>
        </td>
      </tr>
      <tr>
        <td>Authorizable Type</td>
        <td>
          <%= @permission.authorizable_type %>
        </td>
      </tr>
      <tr>
        <td>Permissible</td>
        <td>
          <%= link_to @permission.permissible do %>
            <span class="fa fa-search-plus"></span>
          <% end %>
          <%= @permission.permissible.to_s %>
        </td>
      </tr>
      <tr>
        <td>Permissible Type</td>
        <td>
          <%= @permission.permissible_type %>
        </td>
      </tr>
      <% if @permission.permissible_type == 'Feature' %>
        <tr>
          <td>Routes</td>
          <td>
            <ul class="ul-permission">
              <% @permission.permissible.routes.each do |route| %>
                <li>
                  <span class="fa fa-chevron-right"></span>
                  &nbsp<%= route.to_s %>
                </li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %>
      <tr>
        <td>Created At</td>
        <td><%= @permission.created_at %></td>
      </tr>
      <tr>
        <td>Updated At</td>
        <td><%= @permission.updated_at %></td>
      </tr>
  </tbody>
</table>