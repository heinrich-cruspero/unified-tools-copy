<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Permissions</h1>
    </div>
  </div>
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <%= link_to new_permission_path, class: 'btn btn-secondary ml-2' do %>
          <span class="fa fa-plus"></span>
          New
        <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th style="width: 10%">Authorizable</th>
      <th style="width: 10%">Authorizable Type</th>
      <th style="width: 15%">Permissible</th>
      <th style="width: 10%">Permissible Type</th>
      <th style="width: 15%">Created At</th>
      <th style="width: 15%">Updated At</th>
      <th style="width: 15%">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td>
          <%= permission.authorizable.to_s %>
        </td>
        <td>
          <%= permission.authorizable_type%>
        </td>
        <td>
          <%= permission.permissible.to_s %>
        </td>
        <td>
          <%= permission.permissible_type%>
        </td>
        <td>
          <%= permission.created_at.strftime("%B %d, %Y %H:%M") %>
        </td>
        <td>
          <%= permission.updated_at.strftime("%B %d, %Y %H:%M") %>
        </td>
        <td>
          <%= link_to permission, class: 'btn btn-light btn-sm', type: 'button' do %>
            <span class="fa fa-search-plus"></span>
            Show
          <% end %>
          <%= link_to edit_permission_path(permission), class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-file"></span>
            Edit
          <% end %>
          <%= link_to permission, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-trash"></span>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
