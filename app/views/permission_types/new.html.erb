<div class="row">
    <div class="col-sm">
        <h2>New Permission Type</h2>
    </div>
    <div class="col-sm">
        <div class="float-right">
            <%= link_to new_permission_type_path, class: 'btn btn-secondary ml-2' do %>
                <span class="fa fa-plus"></span>
                New
            <% end %>
            <%= link_to permission_types_path, class:"btn btn-secondary ml-2" do %>
                <span class="fa fa-list"> </span>
                Return to List
            <% end %>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-sm border-top p-3">
        <%= render 'form', permission_type: @permission_type %>
    </div>
</div>
