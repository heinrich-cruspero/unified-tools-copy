<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Permission Types</h1>
    </div>
  </div>
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-right">
      <div class="btn-group mr-2">
        <%= link_to new_permission_type_path, class: 'btn btn-secondary ml-2' do %>
          <span class="fa fa-plus"></span>
          New
        <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th style="width: 20%">Name</th>
      <th style="width: 20%">Description</th>
      <th style="width: 20%">Created At</th>
      <th style="width: 20%">Updated At</th>
      <th style="width: 30%">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @permission_types.each do |permission_type| %>
      <tr>
        <td><%= permission_type.name %></td>
        <td><%= permission_type.description %></td>
        <td><%= permission_type.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= permission_type.updated_at.strftime("%B %d, %Y %H:%M") %></td>
        <td>
          <%= link_to edit_permission_type_path(permission_type), class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-file"></span>
            Edit
          <% end %>
          <%= link_to permission_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-trash"></span>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
