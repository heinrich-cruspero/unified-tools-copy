<ul class="nav nav-tabs mb-5">
  <li class="nav-item">
    <a class="nav-link active" href="<%= users_path %>">Users</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="<%= roles_path %>">Roles</a>
  </li>
</ul>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th style="width: 10%">Email</th>
      <th style="width: 10%">Roles</th>
      <th style="width: 25%">Permissions</th>
      <th style="width: 15%">Created At</th>
      <th style="width: 15%">Updated At</th>
      <th style="width: 20%">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <ul class="list-group">
            <% user.roles.each do |role| %>
              <li class="list-group-item"><%= role.name %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <% unless user.permissions.empty? %>
            <ul class="list-group">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                &nbsp
                <span class="badge badge-primary badge-pill">
                  <%= link_to new_permission_path, class: 'data-toggle="modal"' do %>
                    <span class="fa fa-plus"></span>
                    New
                  <% end %>
                </span>
              </li>
              <% user.permission_types.each do |permission_type| %>
                <li class="list-group-item">
                  <b><%= permission_type.permissible_type %></b>
                  <ul class="ul-permission">
                    <% user.permissions.each do |permission| %>
                      <% if permission.permissible_type == permission_type.permissible_type %>
                        <li>
                          <%= link_to permission do %>
                            <span class="fa fa-search-plus"></span>
                          <% end %>
                          <%= link_to edit_permission_path(permission) do %>
                            <span class="fa fa-edit"></span>
                          <% end %>
                          &nbsp<%= permission.permissible.to_s %>
                        </li>
                      <% end %>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            </ul>
          <% end %>
        </td>
        <td><%= user.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= user.updated_at.strftime("%B %d, %Y %H:%M") %></td>
        <td>
          <%= link_to edit_user_path(user), class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-file"></span>
            Edit
          <% end %>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' do %>
            <span class="fa fa-trash"></span>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
