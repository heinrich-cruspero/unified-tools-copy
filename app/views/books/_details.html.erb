<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col"></th>
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">List</th>
      <th scope="col">Wholesale</th>
      <th scope="col">Amazon Low</th>
      <th scope="col">FBA Low</th>
      <th scope="col">Amazon Rental</th>
      <th scope="col">Sales Rank</th>
      <th scope="col">Pub</th>
      <th scope="col">Subject</th>
    </tr>
  </thead>
  <tbody>
    <% if @book.nil? %>
        <tr class="no-data">
            <td colspan="11" class="text-center">No data available in table</td>
        </tr>
    <% else %>
    <tr>
        <td>
            <% if @book.image_url %>
                <%= image_tag @book.image_url %>
            <% end %>
        </td>
        <td> <!-- Author -->
            <%= @book.author %>
        </td>
        <td> <!-- Title -->
            <%= @book.title %> <br>
            <%= @book.edition %> <br>
            <%= @book.isbn %> <br>
            <%= @book.ean %> <br>
            OE: <%= link_to  "#{@book.oe_isbn}", book_details_path(:search => @book.oe_isbn), method: :get, remote: true, class: 'text-info' %> 
            NE: 
            <%
=begin%>
 NE: <%= link_to  @book.ne_isbn, book_details_path(isbn: @book.ne_isbn), method: :get %> <br> 
<%
=end%>
        </td>
        <td> <!-- List Price -->
            <%= @book.list_price %>
        </td>
        <td> <!-- Wholesale -->
            <%= @book.max_used_wholesale_price %> <br>
            <%= @book.edition_status_code %>
            <%= @book.edition_status_date %>
        </td> 
        <td> <!-- Amazon Low -->
            7d: <%= @book.amazon_ca_low %> <br>
            1/<%= Book.get_jan_year %>: <%= @book.lowest_price_jan_average %> <br>
            8/<%= Book.get_aug_year %>: <%= @book.lowest_price_aug_average %>
        </td>
        <td> <!-- FBA Low -->
            7d: <%= @book.weekly_fba %> <br>
            8/<%= Book.get_aug_year %>: <%= @book.fba_august_average %>
        </td>
        <td> <!-- Amazon Rental -->
            7d: <%= @book.lowest_rental_average %> <br>
            8/<%= Book.get_aug_year %>: <%= @book.lowest_rental_august_average %>
        </td>
        <td> <!-- Sales Rank -->
            7d: <%= @book.weekly_sales_rank %> <br>
            1/<%= Book.get_jan_year %>: <%= @book.sales_rank_jan_average %> <br>
            8/<%= Book.get_aug_year%> : <%= @book.sales_rank_aug_average %> <br>
            OE: <%= @book.oe_isbn_sales_rank %>
        </td>
        <td> <!-- Pub -->
            <%= @book.publisher %> <br>
            <%= @book.publication_date %> <br>
            Life: <%= @book.life %> <br>
            OE Life: <%= @book.oe_life %> <br>
            C Life: <%= @book.c_life %> <br>
            R Life: <%= @book.r_life %> <br>
            <%= @book.binding %>
        </td>
        <td> <!-- Subject -->
            <%= @book.subject %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>